        android:text="សារលើកទឹកចិត្ត"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#FFFF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="630dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="105dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="ព្យាយាម គង់បានសម្រេច"
                android:textColor="#FFC12F01"
                android:background="@drawable/border10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="តស៊ូសម្រាប់អនាគតរបស់អ្នក"
                android:textColor="#A1A1A1"
                android:background="@drawable/border11"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="ជីវិត ជាដំណើរផ្សងព្រេង"
                android:textColor="#FFFA4280"
                android:background="@drawable/borderbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="មនុស្សគ្រប់គ្នា តែងតែមានកំហុស"
                android:textColor="#FF052AFA"
                android:background="@drawable/broder1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="ជោគវាសនារបស់អ្នក ពឹងផ្អែកលើការសម្រេច ចិត្តរបស់អ្នក"
                android:textColor="#A800C5"
                android:background="@drawable/border4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="បច្ចុប្បន្នកាលជា រឿងដែលត្រូវប្រឈមមុខ និង ដោះស្រាយ"
